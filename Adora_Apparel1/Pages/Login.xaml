<UserControl x:Class="Adora_Apparel1.Pages.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" Height="661.611" Width="1052.836">
    <Grid Style="{StaticResource ContentRoot}">
        <Label Content="Please Login With your credidentials" HorizontalAlignment="Left" Margin="227,69,0,0" VerticalAlignment="Top" Height="36" Width="543" FontFamily="Segoe UI Semibold" FontSize="20"/>
